---
interface Props {
  event: {
    data: {
      title: string;
      date: string;
      time?: string;
      location: string;
      type: string;
      topic: string;
      description: string;
      registrationUrl?: string;
      cncfEventUrl?: string;
      banner?: string;
    };
  };
  isPast?: boolean;
}

const { event, isPast = false } = Astro.props;
const { data } = event;

const typeColors = {
  meetup: 'bg-blue-100 text-blue-800',
  workshop: 'bg-green-100 text-green-800',
  conference: 'bg-purple-100 text-purple-800',
  webinar: 'bg-orange-100 text-orange-800',
};

// Prioritize CNCF Event URL over registration URL
const eventLink = data.cncfEventUrl || data.registrationUrl;
---

<div class="bg-white rounded-lg shadow-md hover:shadow-xl transition overflow-hidden relative">
  <!-- Banner Image or Default Banner -->
  {data.banner ? (
    <div class="relative bg-gray-100 overflow-hidden">
      <button 
        type="button"
        class="w-full text-left cursor-zoom-in hover:opacity-90 transition-opacity"
        onclick={`openBannerModal('${data.banner}', '${data.title.replace(/'/g, "\\'")}')`}
        aria-label={`View ${data.title} banner in full size`}
      >
        <img 
          src={data.banner} 
          alt={data.title}
          class="w-full h-auto object-contain transition-transform duration-300 hover:scale-105"
        />
      </button>
    </div>
  ) : (
    <!-- Default Banner with Event Info Visual -->
    <div class="relative bg-gradient-to-br from-blue-500 via-blue-600 to-purple-600 h-48 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
              <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"/>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#grid)" />
        </svg>
      </div>
      
      <!-- Center Content -->
      <div class="absolute inset-0 flex items-center justify-center text-white p-6">
        <div class="text-center">
          <svg class="w-16 h-16 mx-auto mb-3 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <p class="text-sm font-medium opacity-90">Kubernetes Cloud Native Indonesia</p>
        </div>
      </div>
      
      <!-- Decorative Element -->
      <div class="absolute bottom-0 right-0 opacity-10">
        <svg class="w-32 h-32" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
          <path fill="white" d="M45.1,-57.7C58.9,-49.1,70.5,-34.7,75.4,-18.3C80.3,-1.9,78.5,16.5,70.9,31.1C63.3,45.7,49.9,56.5,35.1,62.8C20.3,69.1,4.1,70.9,-12.3,68.9C-28.7,66.9,-45.3,61.1,-57.8,50.1C-70.3,39.1,-78.7,22.9,-79.8,6.1C-80.9,-10.7,-74.7,-28.1,-64.3,-41.9C-53.9,-55.7,-39.3,-65.9,-23.7,-73.3C-8.1,-80.7,8.5,-85.3,23.5,-81.5C38.5,-77.7,51.9,-65.5,45.1,-57.7Z" transform="translate(100 100)" />
        </svg>
      </div>
    </div>
  )}
  
  <!-- Badge positioned above title -->
  <div class="px-6 pt-6 pb-2">
    <span class={`inline-block px-3 py-1.5 rounded-full text-xs font-bold ${typeColors[data.type as keyof typeof typeColors]}`}>
      {data.type.toUpperCase()}
    </span>
  </div>
  
  <div class="p-6 pt-2">
    <h3 class="text-xl font-bold text-gray-900 mb-4">{data.title}</h3>
    
    <div class="space-y-2 mb-4">
      <div class="flex items-center text-gray-600">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span>{data.date} {data.time && `â€¢ ${data.time}`}</span>
      </div>
      
      <div class="flex items-center text-gray-600">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span class="text-sm">{data.location}</span>
      </div>
    </div>
    
    <p class="text-gray-700 mb-3 font-semibold text-sm">ðŸ“Œ {data.topic}</p>
    <p class="text-gray-600 mb-4 text-sm line-clamp-3">{data.description}</p>
    
    {eventLink && (
      <a
        href={eventLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition font-medium group"
      >
        {isPast ? (
          <>
            View Details
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          </>
        ) : (
          <>
            Register
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </>
        )}
      </a>
    )}
  </div>
</div>
