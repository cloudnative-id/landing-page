<nav class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-10 h-10 rounded-lg flex items-center justify-center">
            <img src="/cncf-indonesia-logo.webp" alt="CNCF Logo" class="w-10 h-10 object-contain" />
          </div>
          <span class="font-bold text-xl text-gray-800">Cloud Native Indonesia</span>
        </a>
      </div>
      <div class="hidden md:flex items-center space-x-6">
        <a href="/" class="text-gray-700 hover:text-blue-600 transition">Home</a>
        <a href="/about" class="text-gray-700 hover:text-blue-600 transition">About</a>
        <a href="/#events" class="text-gray-700 hover:text-blue-600 transition">Events</a>
        <a href="/speakers" class="text-gray-700 hover:text-blue-600 transition">Speakers</a>
        <a href="/#community" class="text-gray-700 hover:text-blue-600 transition">Community</a>
        <a href="/faq" class="text-gray-700 hover:text-blue-600 transition">FAQ</a>
        <a href="https://docs.google.com/forms/d/e/1FAIpQLSfTM99QfPH4avvfu5Tkew3EyP1fouj_rQIrkRJPgvP4dZ9_dA/viewform?usp=sf_link" 
           target="_blank"
           rel="noopener noreferrer"
           class="flex items-center space-x-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white px-5 py-2.5 rounded-lg hover:from-blue-700 hover:to-blue-800 transition-all duration-200 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 whitespace-nowrap">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
          </svg>
          <span class="font-semibold">Become a Speaker</span>
        </a>
      </div>
      <div class="md:hidden">
        <button id="mobile-menu-btn" class="text-gray-700 hover:text-blue-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile drawer -->
  <div id="mobile-menu" class="hidden fixed inset-0 z-40">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-black bg-opacity-50 backdrop-blur-sm transition-opacity" id="mobile-menu-backdrop"></div>
    
    <!-- Drawer -->
    <div id="mobile-drawer" class="absolute right-0 top-0 h-full w-80 bg-gradient-to-br from-white to-blue-50 shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50">
      <!-- Header -->
      <div class="bg-gradient-to-r from-blue-600 to-blue-700 p-6 text-white">
        <div class="flex justify-between items-center">
          <div class="flex items-center space-x-3">
            <img src="/cncf-indonesia-logo.webp" alt="CNCF Logo" class="w-10 h-10 rounded-lg shadow-md" />
            <div>
              <div class="font-bold text-lg">Cloud Native</div>
              <div class="text-blue-100 text-sm">Indonesia</div>
            </div>
          </div>
          <button id="mobile-menu-close" class="text-white hover:bg-white hover:bg-opacity-20 rounded-full p-2 transition">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Navigation Links -->
      <div class="p-4 space-y-2">
        <a href="/" class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-blue-100 hover:text-blue-700 rounded-xl transition-all duration-200 group">
          <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          <span class="font-medium">Home</span>
        </a>
        
        <a href="/about" class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-blue-100 hover:text-blue-700 rounded-xl transition-all duration-200 group">
          <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="font-medium">About</span>
        </a>
        
        <a href="/#events" class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-blue-100 hover:text-blue-700 rounded-xl transition-all duration-200 group">
          <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <span class="font-medium">Events</span>
        </a>
        
        <a href="/speakers" class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-blue-100 hover:text-blue-700 rounded-xl transition-all duration-200 group">
          <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
          </svg>
          <span class="font-medium">Speakers</span>
        </a>
        
        <a href="/#community" class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:text-blue-100 hover:text-blue-700 rounded-xl transition-all duration-200 group">
          <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <span class="font-medium">Community</span>
        </a>

        <a href="/faq" class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-blue-100 hover:text-blue-700 rounded-xl transition-all duration-200 group">
          <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="font-medium">FAQ</span>
        </a>
        
        <!-- Divider -->
        <div class="pt-4 pb-2">
          <div class="h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent"></div>
        </div>
        
        <!-- Become a Speaker -->
        <a href="https://docs.google.com/forms/d/e/1FAIpQLSfTM99QfPH4avvfu5Tkew3EyP1fouj_rQIrkRJPgvP4dZ9_dA/viewform?usp=sf_link" 
           target="_blank"
           rel="noopener noreferrer"
           class="flex items-center justify-center space-x-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-3 rounded-xl hover:from-blue-700 hover:to-blue-800 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 mt-4">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
          </svg>
          <span class="font-semibold">Become a Speaker</span>
        </a>
      </div>
      
      <!-- Footer -->
      <div class="absolute bottom-0 left-0 right-0 p-4 bg-white border-t border-gray-200">
        <div class="text-center text-sm text-gray-500">
          <p class="text-xs mt-1">Cloud Native Indonesia</p>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileDrawer = document.getElementById('mobile-drawer');
  const mobileMenuClose = document.getElementById('mobile-menu-close');
  const mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
  
  function openMenu() {
    mobileMenu?.classList.remove('hidden');
    // Force reflow
    mobileDrawer?.offsetHeight;
    // Slide in
    mobileDrawer?.classList.remove('translate-x-full');
  }
  
  function closeMenu() {
    // Slide out
    mobileDrawer?.classList.add('translate-x-full');
    // Hide after animation
    setTimeout(() => {
      mobileMenu?.classList.add('hidden');
    }, 300);
  }
  
  mobileMenuBtn?.addEventListener('click', openMenu);
  mobileMenuClose?.addEventListener('click', closeMenu);
  mobileMenuBackdrop?.addEventListener('click', closeMenu);
  
  // Close on navigation
  const mobileLinks = document.querySelectorAll('#mobile-drawer a');
  mobileLinks.forEach(link => {
    link.addEventListener('click', closeMenu);
  });
</script>
