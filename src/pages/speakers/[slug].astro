---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const speakers = await getCollection('speakers');
  return speakers.map(speaker => ({
    params: { slug: speaker.id },
    props: { speaker },
  }));
}

const { speaker } = Astro.props;
const { name, title: jobTitle, company, bio, avatar, topic, github, twitter, linkedin, website, talks } = speaker.data;
---

<Layout 
  title={`${name} - Speaker`}
  description={`${name}, ${jobTitle}${company ? ` at ${company}` : ''}. ${bio.substring(0, 150)}...`}
  image={avatar}
>
  <Navbar />
  
  <!-- Speaker Profile -->
  <section class="bg-gradient-to-br from-blue-600 via-blue-700 to-blue-800 text-white py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row gap-8 items-start">
        <!-- Avatar -->
        <div class="flex-shrink-0">
          {avatar ? (
            <img 
              src={avatar} 
              alt={name}
              class="w-48 h-48 rounded-2xl object-cover shadow-2xl border-4 border-white/20"
            />
          ) : (
            <div class="w-48 h-48 rounded-2xl bg-white/10 flex items-center justify-center border-4 border-white/20">
              <svg class="w-24 h-24 text-white/50" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
              </svg>
            </div>
          )}
        </div>

        <!-- Info -->
        <div class="flex-1">
          <h1 class="text-4xl md:text-5xl font-bold mb-3">{name}</h1>
          <p class="text-2xl text-blue-100 font-medium mb-2">{jobTitle}</p>
          {company && (
            <p class="text-xl text-blue-200 mb-6">@ {company}</p>
          )}
          
          <p class="text-lg text-blue-50 leading-relaxed mb-6 max-w-3xl">
            {bio}
          </p>

          <!-- Social Links -->
          <div class="flex gap-4 mb-8">
            {linkedin && (
              <a 
                href={linkedin} 
                target="_blank" 
                rel="noopener noreferrer"
                class="bg-white/10 hover:bg-white/20 backdrop-blur-sm p-3 rounded-lg transition-all"
                title="LinkedIn"
              >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              </a>
            )}
            {github && (
              <a 
                href={`https://github.com/${github}`} 
                target="_blank" 
                rel="noopener noreferrer"
                class="bg-white/10 hover:bg-white/20 backdrop-blur-sm p-3 rounded-lg transition-all"
                title="GitHub"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
                </svg>
              </a>
            )}
            {twitter && (
              <a 
                href={`https://twitter.com/${twitter}`} 
                target="_blank" 
                rel="noopener noreferrer"
                class="bg-white/10 hover:bg-white/20 backdrop-blur-sm p-3 rounded-lg transition-all"
                title="Twitter"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
                </svg>
              </a>
            )}
            {website && (
              <a 
                href={website} 
                target="_blank" 
                rel="noopener noreferrer"
                class="bg-white/10 hover:bg-white/20 backdrop-blur-sm p-3 rounded-lg transition-all"
                title="Website"
              >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                </svg>
              </a>
            )}
          </div>

          <!-- Topic Tags -->
          <div>
            <h3 class="text-sm font-semibold text-blue-200 uppercase tracking-wide mb-3">Topic</h3>
            <div class="flex flex-wrap gap-2">
              {topic.map(exp => (
                <span class="px-4 py-2 bg-white/10 backdrop-blur-sm text-white rounded-lg font-medium">
                  {exp}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Talks Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-3 mb-8">
        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
        </svg>
        <h2 class="text-3xl font-bold text-gray-900">
          Talks & Presentations
          <span class="text-blue-600 ml-2">({talks.length})</span>
        </h2>
      </div>

      {talks.length > 0 ? (
        <div class="space-y-6">
          {talks.map((talk) => (
            <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-xl transition-shadow">
              <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4 mb-4">
                <div class="flex-1">
                  <h3 class="text-xl font-bold text-gray-900 mb-2">
                    {talk.title}
                  </h3>
                  <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600">
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      <span>{new Date(talk.date).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                      </svg>
                      <span>{talk.event}</span>
                    </div>
                  </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="flex gap-2">
                  {talk.slidesUrl && (
                    <a 
                      href={talk.slidesUrl} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium text-sm"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                      </svg>
                      Slides
                    </a>
                  )}
                  {talk.videoUrl && (
                    <a 
                      href={talk.videoUrl} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition font-medium text-sm"
                    >
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z"></path>
                      </svg>
                      Video
                    </a>
                  )}
                </div>
              </div>

              {talk.description && (
                <p class="text-gray-600 leading-relaxed">
                  {talk.description}
                </p>
              )}
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-12 bg-white rounded-xl">
          <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
          </svg>
          <p class="text-gray-600 text-lg">No talks recorded yet</p>
        </div>
      )}
    </div>
  </section>

  <!-- Back to Speakers -->
  <section class="py-8 bg-white border-t border-gray-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <a 
        href="/speakers" 
        class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to All Speakers
      </a>
    </div>
  </section>

  <Footer />
</Layout>
