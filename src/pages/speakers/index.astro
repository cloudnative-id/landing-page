---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const speakers = await getCollection('speakers');
const sortedSpeakers = speakers.sort((a, b) => a.data.order - b.data.order);

// Get all unique topic for filtering
const allTopic = [...new Set(sortedSpeakers.flatMap(s => s.data.topic))].sort();
---

<Layout 
  title="Speakers" 
  description="Meet our amazing speakers who have shared their knowledge at Kubernetes Cloud Native Indonesia events. Learn from industry experts and practitioners."
>
  <Navbar />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          Our Speakers
        </h1>
        <p class="text-xl text-blue-100 max-w-3xl mx-auto">
          Meet the amazing experts who have shared their knowledge with our community
        </p>
      </div>
    </div>
  </section>

  <!-- Filter & Speakers Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Search & Filter -->
      <div class="bg-white rounded-xl shadow-md p-6 mb-8">
        <!-- Search Bar -->
        <div class="mb-6">
          <label for="search-input" class="block text-sm font-semibold text-gray-700 mb-2">
            Search Speaker
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <input
              type="text"
              id="search-input"
              placeholder="Search by name, company, or topic..."
              class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            />
          </div>
        </div>

        <!-- Filter & View Toggle -->
        <div class="flex flex-col lg:flex-row gap-4 items-start lg:items-center justify-between">
          <div class="w-full lg:w-auto">
            <div class="flex items-center gap-2 mb-3">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
              </svg>
              <span class="font-semibold text-gray-700">Filter by Topic:</span>
            </div>
            
            <div class="flex flex-wrap gap-2" id="topic-filters">
              <button 
                class="filter-btn active px-4 py-2 rounded-full text-sm font-medium transition-all"
                data-topic="all"
              >
                All
              </button>
              {allTopic.map(topic => (
                <button 
                  class="filter-btn px-4 py-2 rounded-full text-sm font-medium transition-all"
                  data-topic={topic}
                >
                  {topic}
                </button>
              ))}
            </div>
          </div>

          <!-- View Toggle -->
          <div class="flex items-center gap-2 bg-gray-100 p-1 rounded-lg">
            <button 
              id="grid-view-btn"
              class="view-btn active px-4 py-2 rounded-md text-sm font-medium transition-all flex items-center gap-2"
              title="Grid View"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
              </svg>
              <span class="hidden sm:inline">Grid</span>
            </button>
            <button 
              id="list-view-btn"
              class="view-btn px-4 py-2 rounded-md text-sm font-medium transition-all flex items-center gap-2"
              title="List View"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
              <span class="hidden sm:inline">List</span>
            </button>
          </div>
        </div>
        
        <!-- Result Count -->
        <div class="mt-4 pt-4 border-t border-gray-200 text-sm text-gray-600">
          Showing <span id="result-count" class="font-semibold text-blue-600">{sortedSpeakers.length}</span> of <span class="font-semibold">{sortedSpeakers.length}</span> speaker(s)
        </div>
      </div>

      <!-- Speakers Grid/List -->
      <div id="speakers-container">
        <!-- Grid View -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="speakers-grid">
          {sortedSpeakers.map((speaker) => (
            <a 
              href={`/speakers/${speaker.id}/`}
              class="speaker-card bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1"
              data-topic={JSON.stringify(speaker.data.topic)}
              data-name={speaker.data.name.toLowerCase()}
              data-company={(speaker.data.company || '').toLowerCase()}
            >
              <!-- Avatar -->
              <div class="relative h-64 bg-gradient-to-br from-gray-500 to-gray-700 overflow-hidden">
                {speaker.data.avatar ? (
                  <img 
                    src={speaker.data.avatar} 
                    alt={speaker.data.name}
                    class="w-full h-full object-cover"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center">
                    <svg class="w-32 h-32 text-white/50" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                )}
                <!-- Talks Badge -->
                <div class="absolute top-4 right-4 bg-white/95 backdrop-blur-sm px-3 py-1 rounded-full shadow-lg">
                  <div class="flex items-center gap-1 text-sm font-semibold text-blue-600">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                    </svg>
                    <span>{speaker.data.talks.length}</span>
                  </div>
                </div>
              </div>

              <!-- Content -->
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-1 line-clamp-1">
                  {speaker.data.name}
                </h3>
                <p class="text-blue-600 font-medium mb-1 line-clamp-1">
                  {speaker.data.title}
                </p>
                {speaker.data.company && (
                  <p class="text-gray-600 text-sm mb-3 flex items-center gap-1">
                    <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    <span class="line-clamp-1">{speaker.data.company}</span>
                  </p>
                )}
                
                <p class="text-gray-600 text-sm line-clamp-2 mb-4 leading-relaxed">
                  {speaker.data.bio}
                </p>

                <!-- Topic Tags -->
                <div class="flex flex-wrap gap-2 mb-4">
                  {speaker.data.topic.slice(0, 2).map(exp => (
                    <span class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full border border-blue-200">
                      {exp}
                    </span>
                  ))}
                  {speaker.data.topic.length > 2 && (
                    <span class="px-3 py-1 bg-gray-50 text-gray-600 text-xs font-medium rounded-full border border-gray-200">
                      +{speaker.data.topic.length - 2}
                    </span>
                  )}
                </div>

                <!-- Social Links -->
                <div class="flex gap-3 pt-3 border-t border-gray-100">
                  {speaker.data.linkedin && (
                    <div class="text-gray-400 hover:text-blue-600 transition" title="LinkedIn">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    </div>
                  )}
                  {speaker.data.github && (
                    <div class="text-gray-400 hover:text-gray-900 transition" title="GitHub">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                  )}
                  {speaker.data.twitter && (
                    <div class="text-gray-400 hover:text-blue-400 transition" title="Twitter">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
                      </svg>
                    </div>
                  )}
                  {speaker.data.website && (
                    <div class="text-gray-400 hover:text-green-600 transition" title="Website">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                      </svg>
                    </div>
                  )}
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- No Results Message -->
      <div id="no-results" class="hidden text-center py-16">
        <svg class="w-24 h-24 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <p class="text-xl text-gray-600 font-medium mb-2">No speakers found</p>
        <p class="text-gray-500">Try adjusting your search or filter criteria</p>
      </div>

    </div>
  </section>

  <Footer />

  <style>
    .filter-btn {
      background-color: #f3f4f6;
      color: #4b5563;
      border: 2px solid transparent;
    }

    .filter-btn:hover {
      background-color: #e5e7eb;
      border-color: #d1d5db;
    }

    .filter-btn.active {
      background-color: #2563eb;
      color: white;
      border-color: #2563eb;
    }

    .view-btn {
      background-color: transparent;
      color: #6b7280;
    }

    .view-btn:hover {
      color: #374151;
    }

    .view-btn.active {
      background-color: white;
      color: #2563eb;
      box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    }

    .line-clamp-1 {
      display: -webkit-box;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .line-clamp-3 {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    /* List View Styles */
    .list-view #speakers-grid {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .list-view .speaker-card {
      display: flex !important;
      flex-direction: row;
      align-items: stretch;
    }

    .list-view .speaker-card.hidden-card {
      display: none !important;
    }

    .list-view .speaker-card > div:first-child {
      width: 200px;
      height: auto;
      flex-shrink: 0;
    }

    .list-view .speaker-card > div:last-child {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    @media (max-width: 768px) {
      .list-view .speaker-card {
        flex-direction: column;
      }

      .list-view .speaker-card > div:first-child {
        width: 100%;
        height: 200px;
      }
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const searchInput = document.getElementById('search-input') as HTMLInputElement;
      const filterBtns = document.querySelectorAll('.filter-btn');
      const speakerCards = document.querySelectorAll('.speaker-card');
      const resultCount = document.getElementById('result-count');
      const noResults = document.getElementById('no-results');
      const speakersContainer = document.getElementById('speakers-container');
      const speakersGrid = document.getElementById('speakers-grid');
      const gridViewBtn = document.getElementById('grid-view-btn');
      const listViewBtn = document.getElementById('list-view-btn');

      let currentFilter = 'all';
      let currentSearch = '';

      // Search functionality
      searchInput?.addEventListener('input', (e) => {
        currentSearch = (e.target as HTMLInputElement).value.toLowerCase().trim();
        filterSpeakers();
      });

      // Filter functionality
      filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          currentFilter = (btn as HTMLElement).dataset.topic || 'all';
          
          // Update active button
          filterBtns.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');

          filterSpeakers();
        });
      });

      // View toggle functionality
      gridViewBtn?.addEventListener('click', () => {
        speakersContainer?.classList.remove('list-view');
        gridViewBtn.classList.add('active');
        listViewBtn?.classList.remove('active');
      });

      listViewBtn?.addEventListener('click', () => {
        speakersContainer?.classList.add('list-view');
        listViewBtn.classList.add('active');
        gridViewBtn?.classList.remove('active');
      });

      // Combined filter function
      function filterSpeakers() {
        let visibleCount = 0;
        
        speakerCards.forEach(card => {
          const cardElement = card as HTMLElement;
          const cardTopic = JSON.parse(cardElement.dataset.topic || '[]');
          const cardName = cardElement.dataset.name || '';
          const cardCompany = cardElement.dataset.company || '';
          const cardTopicString = cardTopic.join(' ').toLowerCase();
          
          // Check topic filter
          const topicMatch = currentFilter === 'all' || cardTopic.includes(currentFilter);
          
          // Check search filter
          const searchMatch = currentSearch === '' || 
            cardName.includes(currentSearch) || 
            cardCompany.includes(currentSearch) ||
            cardTopicString.includes(currentSearch);
          
          if (topicMatch && searchMatch) {
            cardElement.classList.remove('hidden-card');
            cardElement.style.display = '';
            visibleCount++;
          } else {
            cardElement.classList.add('hidden-card');
            cardElement.style.display = 'none';
          }
        });

        // Update result count
        if (resultCount) {
          resultCount.textContent = visibleCount.toString();
        }

        // Show/hide no results message
        if (visibleCount === 0) {
          speakersGrid?.classList.add('hidden');
          noResults?.classList.remove('hidden');
        } else {
          speakersGrid?.classList.remove('hidden');
          noResults?.classList.add('hidden');
        }
      }
    });
  </script>
</Layout>
