---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const team = await getCollection('team');
const sortedOrganizers = team.sort((a, b) => a.data.order - b.data.order).filter(member => member.data.emeritus !== true);
const sortedEmeritus = team.sort((a, b) => a.data.order - b.data.order).filter(member => member.data.emeritus === true);
---

<Layout 
  title="About Us" 
  description="Learn about Kubernetes Cloud Native Indonesia, our mission to build Indonesia's most active cloud native community, and meet our organizers and contributors."
>
  <Navbar />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          About Us
        </h1>
        <p class="text-xl text-blue-100 max-w-3xl mx-auto">
          Building Indonesia's largest and most active Kubernetes and Cloud Native community
        </p>
      </div>
    </div>
  </section>

  <!-- What We Do -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">What We Do</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Activities we do to contribute to building the cloud native ecosystem in Indonesia.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Meetups -->
        <div class="bg-gray-50 rounded-lg shadow-md p-8 hover:shadow-xl transition">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 text-center">Regular Meetups</h3>
          <p class="text-gray-600 text-center">
            Regular gatherings with speakers from the industry and experienced practitioners 
            to share knowledge and best practices.
          </p>
        </div>

        <!-- Workshops -->
        <div class="bg-gray-50 rounded-lg shadow-md p-8 hover:shadow-xl transition">
          <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 text-center">Hands-on Workshops</h3>
          <p class="text-gray-600 text-center">
            Practical workshops with hands-on labs to learn cloud native 
            technologies directly and in-depth.
          </p>
        </div>

        <!-- Webinars -->
        <div class="bg-gray-50 rounded-lg shadow-md p-8 hover:shadow-xl transition">
          <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 text-center">Online Webinars</h3>
          <p class="text-gray-600 text-center">
            Online webinars accessible from anywhere, discussing trending topics 
            and case studies from the industry.
          </p>
        </div>

        <!-- Open Source -->
        <div class="bg-gray-50 rounded-lg shadow-md p-8 hover:shadow-xl transition">
          <div class="bg-orange-100 w-16 h-16 rounded-full flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 text-center">Open Source Projects</h3>
          <p class="text-gray-600 text-center">
            Collaborating on developing tools and open source projects that are beneficial 
            for the Indonesian cloud native ecosystem.
          </p>
        </div>

        <!-- Community Support -->
        <div class="bg-gray-50 rounded-lg shadow-md p-8 hover:shadow-xl transition">
          <div class="bg-pink-100 w-16 h-16 rounded-full flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 text-center">Community Support</h3>
          <p class="text-gray-600 text-center">
            Discussion and sharing platform on Telegram for mutual assistance in 
            problem-solving and knowledge sharing.
          </p>
        </div>

        <!-- Networking -->
        <div class="bg-gray-50 rounded-lg shadow-md p-8 hover:shadow-xl transition">
          <div class="bg-indigo-100 w-16 h-16 rounded-full flex items-center justify-center mb-6 mx-auto">
            <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 text-center">Networking</h3>
          <p class="text-gray-600 text-center">
            Building connections with professionals and companies that 
            adopt cloud native technologies.
          </p>
        </div>
      </div>
    </div>
  </section>


  <!-- Organizers Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Meet Our Organizers</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Passionate individuals dedicated to building and nurturing the community
        </p>
      </div>
      
      {sortedOrganizers.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
          {sortedOrganizers.map((member) => (
            <div class="bg-white rounded-xl shadow-md p-6 text-center hover:shadow-xl transition-all transform hover:-translate-y-1">
              {member.data.avatar ? (
                <img 
                  src={member.data.avatar} 
                  alt={member.data.name}
                  class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-4 border-blue-100"
                />
              ) : (
                <div class="w-32 h-32 bg-gradient-to-br from-blue-500 to-blue-700 rounded-full mx-auto mb-4 flex items-center justify-center shadow-lg">
                  <span class="text-4xl text-white font-bold">
                    {member.data.name.split(' ').map(n => n[0]).join('')}
                  </span>
                </div>
              )}
              <h3 class="text-xl font-bold text-gray-900 mb-1">{member.data.name}</h3>
              <p class="text-blue-600 font-semibold mb-3 text-sm">{member.data.role}</p>
              <p class="text-gray-600 text-sm mb-4 leading-relaxed">{member.data.bio}</p>
              
              {(member.data.github || member.data.twitter || member.data.linkedin || member.data.website) && (
                <div class="flex justify-center space-x-3 pt-4 border-t border-gray-200">
                  {member.data.github && (
                    <a 
                      href={`https://github.com/${member.data.github}`} 
                      target="_blank" 
                      rel="noopener noreferrer" 
                      class="text-gray-600 hover:text-blue-600 transition"
                      title="GitHub"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                    </a>
                  )}
                  {member.data.twitter && (
                    <a 
                      href={`https://twitter.com/${member.data.twitter}`} 
                      target="_blank" 
                      rel="noopener noreferrer" 
                      class="text-gray-600 hover:text-blue-400 transition"
                      title="Twitter"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
                      </svg>
                    </a>
                  )}
                  {member.data.linkedin && (
                    <a 
                      href={member.data.linkedin} 
                      target="_blank" 
                      rel="noopener noreferrer" 
                      class="text-gray-600 hover:text-blue-700 transition"
                      title="LinkedIn"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    </a>
                  )}
                  {member.data.website && (
                    <a 
                      href={member.data.website} 
                      target="_blank" 
                      rel="noopener noreferrer" 
                      class="text-gray-600 hover:text-green-600 transition"
                      title="Website"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                      </svg>
                    </a>
                  )}
                </div>
              )}
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-12 bg-white rounded-lg">
          <p class="text-gray-600 text-lg mb-6">We're building our amazing team of organizers!</p>
          <a href="mailto:organizers@cloudnative.id" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-700 transition">
            Interested in Becoming an Organizer?
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- Emeritus Member Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Emeritus Members üèÖ</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Honorable Mention
        </p>
      </div>
      
      {sortedEmeritus.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
          {sortedEmeritus.map((member) => (
            <div class="bg-gray-50 rounded-xl shadow-md p-6 text-center hover:shadow-xl transition-all transform hover:-translate-y-1">
              {member.data.avatar ? (
                <img 
                  src={member.data.avatar} 
                  alt={member.data.name}
                  class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-4 border-blue-100"
                />
              ) : (
                <div class="w-32 h-32 bg-gradient-to-br from-blue-500 to-blue-700 rounded-full mx-auto mb-4 flex items-center justify-center shadow-lg">
                  <span class="text-4xl text-white font-bold">
                    {member.data.name.split(' ').map(n => n[0]).join('')}
                  </span>
                </div>
              )}
              <h3 class="text-xl font-bold text-gray-900 mb-1">{member.data.name}</h3>
              <p class="text-blue-600 font-semibold mb-3 text-sm">{member.data.role}</p>
              <p class="text-gray-600 text-sm mb-4 leading-relaxed">{member.data.bio}</p>
              
              {(member.data.github || member.data.twitter || member.data.linkedin || member.data.website) && (
                <div class="flex justify-center space-x-3 pt-4 border-t border-gray-200">
                  {member.data.github && (
                    <a 
                      href={`https://github.com/${member.data.github}`} 
                      target="_blank" 
                      rel="noopener noreferrer" 
                      class="text-gray-600 hover:text-blue-600 transition"
                      title="GitHub"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                    </a>
                  )}
                  {member.data.twitter && (
                    <a 
                      href={`https://twitter.com/${member.data.twitter}`} 
                      target="_blank" 
                      rel="noopener noreferrer" 
                      class="text-gray-600 hover:text-blue-400 transition"
                      title="Twitter"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
                      </svg>
                    </a>
                  )}
                  {member.data.linkedin && (
                    <a 
                      href={member.data.linkedin} 
                      target="_blank" 
                      rel="noopener noreferrer" 
                      class="text-gray-600 hover:text-blue-700 transition"
                      title="LinkedIn"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    </a>
                  )}
                  {member.data.website && (
                    <a 
                      href={member.data.website} 
                      target="_blank" 
                      rel="noopener noreferrer" 
                      class="text-gray-600 hover:text-green-600 transition"
                      title="Website"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                      </svg>
                    </a>
                  )}
                </div>
              )}
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-12 bg-white rounded-lg">
          <p class="text-gray-600 text-lg mb-6">We're building our amazing team of organizers!</p>
          <a href="mailto:organizers@cloudnative.id" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-700 transition">
            Interested in Becoming an Organizer?
          </a>
        </div>
      )}
    </div>
  </section>

  <Footer />
</Layout>
