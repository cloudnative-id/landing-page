</Layout>

<script>
  // @ts-ignore - Masonry is loaded from CDN
  declare const Masonry: any;

  // Initialize Masonry layout
  let masonryInstance: any = null;

  function initMasonry() {
    const grid = document.getElementById('events-grid-all');
    if (!grid || typeof Masonry === 'undefined') return;

    // Destroy existing instance if any
    if (masonryInstance) {
      masonryInstance.destroy();
    }

    // Get first visible item for columnWidth calculation
    const firstVisibleItem = grid.querySelector('.masonry-item:not(.hidden)');
    if (!firstVisibleItem) return;

    // @ts-ignore - Masonry is loaded from CDN
    masonryInstance = new Masonry(grid, {
      itemSelector: '.masonry-item:not(.hidden)', // Only count visible items
      columnWidth: firstVisibleItem, // Use first visible item
      percentPosition: true,
      gutter: 32, // 2rem (8 * 4 = 32px in Tailwind)
      horizontalOrder: false,
      transitionDuration: '0.3s'
    });

    // Expose to window for filter to use
    // @ts-ignore
    window.masonryInstance = masonryInstance;
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(initMasonry, 100);
    });
  } else {
    setTimeout(initMasonry, 100);
  }

  // Re-layout on window resize
  let resizeTimer: number;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimer);
    resizeTimer = window.setTimeout(() => {
      if (masonryInstance) {
        masonryInstance.layout();
      }
    }, 250);
  });
</script>
