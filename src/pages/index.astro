---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import EventCard from '../components/EventCard.astro';
import EventFilter from '../components/EventFilter.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const events = await getCollection('events', ({ data }) => data.published !== false);
const team = await getCollection('team');
const community = await getCollection('community');

// Separate upcoming and past events based on date
const today = new Date();
today.setHours(0, 0, 0, 0); // Set to start of day for accurate comparison

const upcomingEvents = events
  .filter(event => new Date(event.data.date) >= today)
  .sort((a, b) => new Date(a.data.date).getTime() - new Date(b.data.date).getTime());

const pastEvents = events
  .filter(event => new Date(event.data.date) < today)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()); // Newest past events first

// Combine all events for the unified view
const allEvents = [...upcomingEvents, ...pastEvents];

const sortedTeam = team.sort((a, b) => a.data.order - b.data.order);
const sortedCommunity = community.sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Kubernetes Cloud Native Indonesia">
  <Navbar />
  
  <!-- Hero Section -->
	<section class="relative bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20 overflow-hidden">
		<!-- Background Image -->
		<div class="absolute inset-0 z-0">
			<img 
				src="/hero.webp" 
				alt="Hero background" 
				class="w-full h-full object-cover opacity-70"
			/>
			<div class="absolute inset-0 bg-gradient-to-r from-blue-600/40 to-blue-800/40"></div>
		</div>

		
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
			<div class="text-center">
				<h1 class="text-5xl md:text-6xl font-bold mb-6">
					Kubernetes Cloud Native<br />Indonesia
				</h1>
				<p class="text-xl md:text-2xl mb-8 text-blue-100">
					Building the future of cloud infrastructure together
				</p>
				<p class="text-lg mb-8 max-w-3xl mx-auto">
					Join Indonesia's largest community of Kubernetes and cloud native enthusiasts. 
					Learn, share, and grow together through meetups, workshops, and collaborative projects.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a href="#events" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-bold hover:bg-blue-50 transition">
						Upcoming Events
					</a>
					<a href="#community" class="border-2 border-white text-white px-8 py-3 rounded-lg font-bold hover:bg-white hover:text-blue-600 transition">
						Join Community
					</a>
				</div>
			</div>
		</div>
	</section>

  <!-- Events Section -->
  <section id="events" class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Events</h2>
        <p class="text-xl text-gray-600">Explore our upcoming meetups, workshops, and past events</p>
        
        <!-- Stats -->
        <div class="flex justify-center gap-8 mt-8">
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600">{upcomingEvents.length}</div>
            <div class="text-sm text-gray-600">Upcoming</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-purple-600">{pastEvents.length}</div>
            <div class="text-sm text-gray-600">Past Events</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-green-600">{allEvents.length}</div>
            <div class="text-sm text-gray-600">Total</div>
          </div>
        </div>
      </div>
      
      {allEvents.length > 0 ? (
        <>
          <!-- Filter Component with Time Filter -->
          <EventFilter sectionId="all" showTimeFilter={true} />
          
          <!-- All Events Masonry Layout -->
          <div id="events-grid-all" class="mb-12">
            {upcomingEvents.map((event) => (
              <div 
                class="event-card masonry-item w-full md:w-[calc(50%-1rem)] lg:w-[calc(33.333%-1.33rem)] mb-8"
                data-title={event.data.title}
                data-topic={event.data.topic}
                data-location={event.data.location}
                data-type={event.data.type}
                data-time-status="upcoming"
              >
                <EventCard event={event} isPast={false} />
              </div>
            ))}
            {pastEvents.map((event) => (
              <div 
                class="event-card masonry-item w-full md:w-[calc(50%-1rem)] lg:w-[calc(33.333%-1.33rem)] mb-8 opacity-90"
                data-title={event.data.title}
                data-topic={event.data.topic}
                data-location={event.data.location}
                data-type={event.data.type}
                data-time-status="past"
              >
                <EventCard event={event} isPast={true} />
              </div>
            ))}
          </div>
          
          <!-- No Results Message -->
          <div id="no-results-all" class="text-center py-12 hidden">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-xl text-gray-600 mb-2">No events found</p>
            <p class="text-gray-500">Stay tuned for updates!</p>
          </div>
        </>
      ) : (
        <div class="text-center text-gray-600 py-12">
          <p class="text-lg mb-6">No events at the moment. Stay tuned!</p>
          <a
            href="https://community.cncf.io/kubernetes-indonesia/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition font-semibold"
          >
            Check CNCF Community for Updates
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
        </div>
      )}
    </div>
  </section>

	
	<!-- Divider -->
	<div class="relative py-8">
