						bgColor = 'bg-indigo-600';
					} else if (icon === 'x') {
						iconSvg = `<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`;
						bgColor = 'bg-black';
					} else if (icon === 'instagram') {
						iconSvg = `<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M7.75 2h8.5A5.75 5.75 0 0122 7.75v8.5A5.75 5.75 0 0116.25 22h-8.5A5.75 5.75 0 012 16.25v-8.5A5.75 5.75 0 017.75 2zm0 1.5A4.25 4.25 0 003.5 7.75v8.5A4.25 4.25 0 007.75 20.5h8.5a4.25 4.25 0 004.25-4.25v-8.5A4.25 4.25 0 0016.25 3.5h-8.5zm4.25 3a5.75 5.75 0 110 11.5 5.75 5.75 0 010-11.5zm0 1.5a4.25 4.25 0 100 8.5 4.25 4.25 0 000-8.5zm5.126-.375a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0z"/></svg>`;
						bgColor = 'bg-pink-600';
					} else if (icon === 'facebook') {
						iconSvg = `<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M22.675 0H1.325C.593 0 0 .593 0 1.326v21.348C0 23.407.593 24 1.325 24h11.495v-9.294H9.691v-3.622h3.129V8.413c0-3.1 1.894-4.788 4.659-4.788 1.325 0 2.466.099 2.797.143v3.24l-1.918.001c-1.504 0-1.796.715-1.796 1.763v2.31h3.587l-.467 3.622h-3.12V24h6.116C23.407 24 24 23.407 24 22.674V1.326C24 .593 23.407 0 22.675 0z"/></svg>`;
						bgColor = 'bg-blue-800';
          }

          return (
            <a
              href={item.data.link}
              target="_blank"
              rel="noopener noreferrer"
              class="group bg-white border-2 border-gray-200 rounded-2xl p-8 hover:border-blue-500 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
            >
              <div class="flex flex-col items-center text-center">
                <div class={`${bgColor} p-4 rounded-2xl mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg`}>
                  <div class="text-white" set:html={iconSvg} />
                </div>
                <h3 class="text-2xl font-bold mb-3 text-gray-900">{item.data.title}</h3>
                <p class="text-gray-600 mb-6 leading-relaxed">{item.data.description}</p>
                <div class="flex items-center text-blue-600 font-semibold group-hover:gap-3 gap-2 transition-all">
                  <span>Join Now</span>
                  <svg class="w-5 h-5 group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                  </svg>
